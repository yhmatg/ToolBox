<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_500"
        android:layout_height="@dimen/dp_200"
        android:layout_gravity="center"
        android:background="@drawable/bg_close_door"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_close_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_close_head"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/close_door_alert"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_close_succ"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_close_title"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/close_succ"
            android:textColor="@color/free_color"
            android:textSize="@dimen/sp_16" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_above="@+id/ll_button"
            android:background="@color/login_line_color" />

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_close_foot"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_go_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/go_home"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/login_line_color" />

            <TextView
                android:id="@+id/tv_auto_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/auto_default_return"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
