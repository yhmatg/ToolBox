<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10">

    <Button
        android:id="@+id/bt_unlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_background_two"
        android:padding="@dimen/dp_5"
        android:text="开锁"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/bt_inv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_unlock"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background_two"
        android:padding="@dimen/dp_5"
        android:text="盘点"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/bt_open_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_inv"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background_two"
        android:padding="@dimen/dp_5"
        android:text="打开照明"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/bt_close_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_open_light"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background_two"
        android:padding="@dimen/dp_5"
        android:text="关闭照明"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/bt_open_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_close_light"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background_two"
        android:padding="@dimen/dp_5"
        android:text="打开警报"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/bt_close_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_open_alarm"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bt_background_two"
        android:padding="@dimen/dp_5"
        android:text="关闭警报"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:hint="状态"
        android:textSize="@dimen/sp_18" />
</RelativeLayout>