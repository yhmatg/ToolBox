<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/ast_item_back"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/ast_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="特大扳手"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ast_status"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/free_status_back"
        android:gravity="center"
        android:text="状态"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11" />

    <View
        android:id="@+id/divide_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ast_real_name"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6"
        android:background="@color/divide_color" />

    <TextView
        android:id="@+id/tv_num_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_one"
        android:layout_alignStart="@+id/ast_real_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/assets_id"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_asset_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_one"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name"
        android:text="201010730179"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ast_real_name"
        android:layout_below="@+id/tv_num_name"
        android:text="@string/mode_type"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_mode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_num_name"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_ast_mode"
        android:text="40830"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_mode"
        android:layout_alignStart="@+id/ast_real_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/tool_type"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_mode"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_toEndOf="@+id/tv_num_name"
        android:text="维修工具"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ast_real_name"
        android:layout_below="@+id/tv_type"
        android:text="@string/ast_loc"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_loc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type"
        android:layout_toEndOf="@+id/tv_ast_loc"
        android:layout_marginStart="@dimen/dp_15"
        android:text="aaaa"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ast_real_name"
        android:layout_below="@+id/tv_ast_loc"
        android:text="@string/user_name"
        android:textColor="@color/home_text_two"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_ast_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ast_loc"
        android:layout_toEndOf="@+id/tv_ast_loc"
        android:layout_marginStart="@dimen/dp_15"
        android:text="user"
        android:textColor="@color/setting_text_one"
        android:textSize="@dimen/sp_13" />

</RelativeLayout>